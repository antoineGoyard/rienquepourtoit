{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block body %}
    <h1>Ad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Pieces_number</th>
                <th>Surface</th>
                <th>Ad_type</th>
                <th>Short_content</th>
                <th>Created_at</th>
                <th>City</th>
                <th>Address</th>
                <th>supplementid</th>
                <th>published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ ad.id }}</td>
                <td>{{ ad.price }}</td>
                <td>{{ ad.longitude }}</td>
                <td>{{ ad.latitude }}</td>
                <td>{{ ad.piecesNumber }}</td>
                <td>{{ ad.surface }}</td>
                <td>{{ ad.adType }}</td>
                <td>{{ ad.shortContent }}</td>
                <td>{{ ad.createdAt ? ad.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ad.city }}</td>
                <td>{{ ad.address }}</td>
                {% if ad.supplement == null %}
                    <td>Vide </td>
                {% else %}
                    <td>{{ ad.supplement.id }}</td>
                {% endif %}
                <td>{{ ad.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('ad_show', {'id': ad.id}) }}">show</a>
                    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ad_new') }}">Create new</a>
{% endblock %}
