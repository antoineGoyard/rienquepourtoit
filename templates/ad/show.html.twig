{% extends 'base.html.twig' %}

{% block title %}Ad{% endblock %}

{% block body %}
    <h1>Ad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ad.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ad.price }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ ad.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ ad.latitude }}</td>
            </tr>
            <tr>
                <th>Pieces_number</th>
                <td>{{ ad.piecesNumber }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ ad.surface }}</td>
            </tr>
            <tr>
                <th>Ad_type</th>
                <td>{{ ad.adType }}</td>
            </tr>
            <tr>
                <th>Short_content</th>
                <td>{{ ad.shortContent }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ ad.createdAt ? ad.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ ad.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ ad.address }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ ad.zipCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ad_index') }}">back to list</a>

    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>

    {{ include('ad/_delete_form.html.twig') }}
{% endblock %}
